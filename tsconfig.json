{
	"compilerOptions": {
		"target": "ES2020",
		"module": "esnext",
		"lib": ["ES2020"],
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"moduleDetection": "force",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"isolatedModules": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "tests", "**/*.test.ts"]
}
